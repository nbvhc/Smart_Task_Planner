def is_task_prompt(user_input: str) -> bool:
    """Detect if the user input is requesting a task breakdown."""
    task_keywords = [
        "plan", "task", "break down", "breakdown", "steps", "schedule",
        "organize", "create", "build", "develop", "implement", "launch",
